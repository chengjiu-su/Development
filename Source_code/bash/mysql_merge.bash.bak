#!/bin/bash
stop_service(){
        cd /data/game/b/
        process=`ls  | grep -v leader `  #此条件适用于路径下进程均为在线进程，如有停服/和服进程则需要>另取条件进行for循环
        #根据需求调整相应进程进行维护
        for f in ${process[*]}
        do
                if [ -d $f ]
                then
                echo fetch --- $f
                cd $f
                dos2unix service.sh
                #bash service.sh stop
                cd ..
                fi
        done
}
stop_service

select_destdb(){
${MYSQL} -u${USER} -p${PASS} -h${HOST} -e "use ${DEST_DATABASHE}
	select count(*) from account;
	select count(*) from auction;
	select count(*) from exchange;
	select count(*) from generaldata;
	select count(*) from guild;
	select count(*) from qq"
}

create_path(){
        path=`/bin/pwd`
        DATE(){
                /bin/date '+%x'
        }
        DATE > date.txt
        date=`cat ${path}/date.txt`
        BACKUP_DIR="/data/backup_db/${date}"
        if [ ! -d ${BACKUP_DIR} ]; then
                mkdir -p ${BACKUP_DIR}
        fi
}
create_path

USER="ltnz"
PASS="ltnz"
HOST="127.0.0.1"
DEST_DATABASE="game_ytsc_52"
MYSQL=/usr/local/mysql/bin/mysql
MYSQLDUMP=/usr/local/mysql/bin/mysqldump

cd ${BACKUP_DIR}
${MYSQLDUMP} -u${USER} -p${PASS} -h${HOST} ${DEST_DATABASE} > dest_database_52.sql
DB_NAMES=("game_ytsc_58" "game_ytsc_66" "game_ytsc_67" "game_ytsc_69" "game_ytsc_70" "game_ytsc_71" "game_ytsc_73" "game_ytsc_75" "game_ytsc_76" "game_ytsc_78")
#echo "GET ALL DATABASES"
#备份源数据，不含表结构
for DB_NAME in ${DB_NAMES[*]}
do
        echo "NAME:${DB_NAME}"
        SQL_FILE="${DB_NAME}.sql"
        TAR_FILE="${DB_NAME}.tar.gz"
        ${MYSQLDUMP} -u${USER} -p${PASS} -h${HOST} -t -c --verbose  ${DB_NAME} > ${SQL_FILE}
        #echo 源数据向目标数据库合并数据,并将备份数据进行压缩
        echo "NAME:${DB_NAME}向${DEST_DATABASE}合并数据" 
        ${MYSQL} -u${USER} -p${PASS} -h${HOST} --verbose ${DEST_DATABASE}  < ${SQL_FILE}
        tar zcvf ${TAR_FILE} ${SQL_FILE}
        rm -f  ${SQL_FILE}
done
echo "合服操作完成，对目标数据库进行所有数据查询，确认和服数据正常" 
select_destdb
